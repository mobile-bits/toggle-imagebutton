<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/horizontal_layout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/transparent_overlay"
        android:orientation="horizontal"
        android:gravity="center">

        <com.mobilebits.toggleimagebutton.ToggleImageButton
            android:id="@+id/horizontal_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@null"
            app:imageIds="@array/toggle_icons"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vertical_layout"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontal_layout"
        android:background="@color/transparent_overlay"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <com.mobilebits.toggleimagebutton.ToggleImageButton
            android:id="@+id/vertical_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@null"
            app:imageIds="@array/toggle_icons"/>

    </LinearLayout>


</RelativeLayout>
